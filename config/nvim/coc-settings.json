{
    "diagnostic.enable": false,
    "diagnostic.enableMessage": "never",
    "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
         "cache": {
           "directory": "/temp/ccls"
         },
         "clang": {
          "resourceDir": "/usr/bin/",
          "extraArgs": []
        }
       }
    }
  }
}
